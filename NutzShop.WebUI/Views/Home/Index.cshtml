@model IEnumerable<NutzShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

@foreach (var item in Model)
{
    <div class="col-md-4" style="height:450px; padding:10px; margin:10px; border: solid thin whitesmoke">

        @*Img*@
        <div class="col-md-12">
            <img class="img" style="height:150px" src="~/Content/ProductImages/@item.Image" />
        </div>

        @*Name*@
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
        </div>

        @*Description*@
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>

        @*Price*@
        <div class="col-md-12">
            <h4>@item.Price</h4>
        </div>

        @*Button*@
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>

    </div>
}

@*clear*@
<div class="col-md-12 clearfix" />
